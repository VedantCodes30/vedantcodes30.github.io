---
import { Image } from "astro:assets";
import logo from "../assets/Icons/brand.svg";
---

<header>
  <div class="logo" id="logo">
    <Image src={logo} alt="Brand Logo" />
  </div>
  <nav>
    <ul>
      <li>
        <a href="#features">Features</a>
      </li>
      <li>
        <a href="#pricing">Pricing</a>
      </li>
      <li>
        <a href="#blog">Blog</a>
      </li>
      <li>
        <a href="#about">About Us</a>
      </li>
    </ul>
    <div class="cta">
      <button><a href="#footer" id="cta-primary">Contact Us</a></button>
      <button id="cta-primary"><a href="">Download the app</a></button>
    </div>
  </nav>
</header>

<style>
  .logo {
    cursor: pointer;
  }
  header {
    background: var(--bg-light);
    position: fixed;
    width: 100vw;
    z-index: 222;
    display: flex;
    align-items: center;
    height: 80px;
    justify-content: space-between;
    padding: 0px 24px;
    box-shadow: 0px 20px 20px 4px #10101047;
    gap: 4rem;
    animation: scroll-radius linear forwards;
    animation-timeline: scroll();
  }
  @keyframes scroll-radius {
    from {
      border-radius: 0px 0px 40px 40px;
      border-block-end: none;
    }
    to {
      border-radius: 0px;
      border-block-end: 2px solid var(--bg-dark);
    }
  }
  a:hover {
    font-size: large;
    color: black;
    transition: 500ms cubic-bezier(0.165, 0.84, 0.44, 1);
  }
  nav ul {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
    padding: 2rem;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 786px) {
    header {
      justify-content: center;
    }
    nav {
      display: none;
    }
  }

  li {
    list-style: none;
  }

  a {
    text-decoration: none;
    color: var(--text-dark);
  }

  button {
    border: none;
    font-weight: 400;
    padding: 8px 20px;
    min-width: 150px;
    cursor: pointer;
    border-radius: 50px;
    color: var(--text-light);
    font-size: 1rem;
    background: var(--bg-dark);
    a {
      color: var(--text-light);
    }
  }

  .cta {
    display: flex;
    gap: 1rem;
    margin-inline-start: 1rem;
  }
</style>
