---
import { Image } from "astro:assets";
import img1 from "../assets/Images/1.png";
import img2 from "../assets/Images/2.png";
import img3 from "../assets/Images/3.png";

const card = [
  {
    title: "Access Nature",
    desc: "With TrailHive, you'll have access to a comprehensive database of trails, complete with detailed information on ratings, difficulty levels, and user reviews.",
    src: img1,
  },
  {
    title: "Know Mountains",
    desc: "With TrailHive, you'll have access to a comprehensive database of trails, complete with detailed information on ratings, difficulty levels, and user reviews.",
    src: img2,
  },
  {
    title: "Access Trails",
    desc: "With TrailHive, you'll have access to a comprehensive database of trails, complete with detailed information on ratings, difficulty levels, and user reviews.",
    src: img3,
  },
];
---

<section id="features">
  <div class="container">
    <div class="feat">
      <p>FEATURES</p>
      <h2>Stay Active and Healthy</h2>
      <button>Learn More</button>
    </div>
    <div class="cards">
      {
        card.map((item) => (
          <div class="card-container">
            <Image src={item.src} alt={item.title} />
            <h1>{item.title}</h1>
            <p>{item.desc}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  section {
    position: inherit;
    padding: 4rem 1.5rem;
    background: var(--bg-light);
    border-radius: 40px;
  }
  .container {
    padding: 1rem;
    display: flex;
    align-items: flex-start;
    gap: 17.5rem;
    justify-content: center;
  }
  .cards {
    display: flex;
    gap: 1.5rem;
    overflow: hidden;
    align-items: flex-start;
    justify-content: center;
  }

  .feat {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
    align-self: stretch;

    p {
      font-weight: 300;
      font-size: 0.875rem;
      letter-spacing: 1px;
      line-height: 150%;
    }

    button {
      border: none;
      font-weight: 400;
      padding: 8px 20px;
      min-width: 150px;
      cursor: pointer;
      border-radius: 50px;
      color: var(--text-light);
      font-size: 1rem;
      background: var(--bg-dark);
    }
  }
  h1,
  h2 {
    color: var(--text-dark);
  }

  .card-container {
    align-items: flex-start;
    max-width: 20rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    h1 {
      font-weight: 600;
      line-height: 130%;
    }
    p {
      color: var(--text-dark);
      font-weight: 400;
      max-width: 20ch;
      line-height: 160%;
    }
  }
</style>
